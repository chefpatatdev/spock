<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar_home"
        android:layout_gravity="top">
        <TextView
            android:text="Home"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="#ffffffff"
            android:inputType="none"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/socket_indicator"
            android:src="@android:color/transparent"
            android:background="@drawable/offline_indicator"
            android:contentDescription="offline" 
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            />
            
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:text="Live driving"
        android:id="@+id/live_driving_nav"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="75dp"
        android:layout_below="@id/toolbar_home"
        android:gravity="center"
        
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp" 
        android:paddingBottom="1dp"
        android:background="@drawable/live_button_unpressed" 
        android:textColor="@color/colorSecundairy"
        />
        <Button
        android:text="Traject Driving"
        android:id="@+id/traject_driving_nav"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_height="75dp"
        android:layout_below="@id/live_driving_nav"
        android:gravity="center"
        android:paddingBottom="1dp"

        android:background="@drawable/live_button_unpressed" 
        android:textColor="@color/colorSecundairy"
        />
        <Button
        android:text="Measuring data"
        android:id="@+id/measuring_screen"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="75dp"
        android:layout_below="@+id/traject_driving_nav"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:layout_margin="15dp"
        android:background="@drawable/live_button_unpressed" 
        android:textColor="@color/colorSecundairy"
         />
        <Button
        android:text="Live Measure"
        android:id="@+id/sockets"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="75dp"
        android:layout_below="@id/measuring_screen"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:layout_margin="15dp"
        android:background="@drawable/live_button_unpressed" 
        android:textColor="@color/colorSecundairy"
        />


</RelativeLayout>
