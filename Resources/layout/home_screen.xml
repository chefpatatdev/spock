<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar_home"
        android:layout_gravity="top">
        <TextView
            android:text="Home"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="#ffffffff"
            android:inputType="none"/>
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:text="Live driving"
        android:id="@+id/live_driving_nav"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar_home"
        android:layout_marginTop="25dp" />
    <Button
        android:text="placeholder1"
        android:id="@+id/placeholder1"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_below="@+id/live_driving_nav"
        />
        <Button
        android:text="placeholder2"
        android:id="@+id/placeholder2"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_below="@+id/placeholder1"
         />
        <Button
        android:text="placeholder3"
        android:id="@+id/placeholder3"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_below="@+id/placeholder2"
        />


</RelativeLayout>
